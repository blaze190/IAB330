<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsManager.Views.Report"
             Title="Report">
    <ContentPage.Content>
        <StackLayout x:Name="ReportStack" Padding="40,40,40,0" VerticalOptions="StartAndExpand">
            <Picker x:Name="pickerCategory" Title="Select a Category"/>
            <Entry x:Name="entryDescription" Placeholder="Report Description"/>
            <Button x:Name="buttonSubmit" Text="Submit" 
                    Clicked="buttonSubmitClicked"
                    BackgroundColor="#212121"
                    TextColor="#ffffff"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>