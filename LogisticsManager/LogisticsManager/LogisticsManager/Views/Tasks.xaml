<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsManager.Views.Tasks"
             Title="Tasks">
    <ContentPage.Content>
        <StackLayout x:Name="TasksStack" Padding="40,0,40,0">
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add Task" Activated="OnAdd"
               Priority="0" Order="Secondary" />
        <ToolbarItem Name="Delete All Tasks" Activated="OnDeleteAll"
               Priority="1" Order="Secondary" />
    </ContentPage.ToolbarItems>
</ContentPage>