<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsManager.Views.Request"
             Title="Request">
    <ContentPage.Content>
        <StackLayout x:Name="RequestStack" Padding="40,40,40,0" VerticalOptions="StartAndExpand">
            <Label x:Name="labelEquipment" Text="Equipment"/>
            <Picker x:Name="pickerEquipment" Title="Select Equipment"/>
            <Label x:Name="labelReason" Text="Reason"/>
            <Entry x:Name="entryReason" Placeholder="Reason"/>
            <Button x:Name="buttonSubmit" Text="Submit"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>