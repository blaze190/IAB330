<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsManager.Views.NewTask"
             Title="New Task">
    <ContentPage.Content>
        <StackLayout x:Name="NewTaskStack" Padding="40,40,40,0" VerticalOptions="StartAndExpand">
            <Picker x:Name="pickerAssignment" Title="Assign Task To:"/>
            <Entry x:Name="entryName" Placeholder="Task Name"/>
            <Entry x:Name="entryDescription" Placeholder="Task Description"/>
            <Button x:Name="buttonSubmit" Text="Submit" Clicked="buttonSubmitClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>