<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticsManager.Views.Register"
             Title="Register">
    <ContentPage.Content>
        <StackLayout x:Name="RegisterStack" Padding="40,5,40,0" VerticalOptions="StartAndExpand">
            <Entry AutomationId="registerEntryCompanyName" x:Name="entryCompanyName" Placeholder="Company Name"/>
            <Entry AutomationId="registerEntryEmail" x:Name="entryEmail" Placeholder="Email"/>
            <Entry AutomationId="registerEntryUsername" x:Name="entryUsername" Placeholder="Admin Username"/>
            <Entry AutomationId="registerEntryPassword" x:Name="entryPassword" Placeholder="Password"/>
            <Entry AutomationId="registerEntryReEnterPassword" x:Name="entryReEnterPassword" IsPassword="True" Placeholder="Re-Enter Password"/>
            <Button AutomationId="registerButtonSubmit" x:Name="buttonSubmit" Text="Submit" BackgroundColor="#212121" TextColor="#ffffff" Clicked="buttonSubmitClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>